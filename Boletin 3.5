
package boletin_3_5;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

/**
 *
 * @author dam1
 */
public class Boletin_3_5 {

    
    public static void main(String[] args) throws IOException{
        BufferedReader br=new BufferedReader (new InputStreamReader(System.in));
        
        
        float irpf=0.18f;
        float rss=36.0f;
        System.out.println("Introduzca o soldo fixo: ");
        float soldoFixo=Float.parseFloat(br.readLine());
        System.out.println("Introduzca o total do importe por ventas: ");
        float importeVentas=Float.parseFloat(br.readLine());
        System.out.println("Introduzca o total de kilómetros recorridos: ");
        float km=Float.parseFloat(br.readLine());
        System.out.println("Introduzca o total de dias fora por traballo: ");
        float dias=Float.parseFloat(br.readLine());
        
        float comision=5*importeVentas/100;
        float quilometraxe=km*2;
        float dietas=dias*30;
        float soldoTotal=soldoFixo+comision+quilometraxe+dietas;
        System.out.println("O soldo total é de : "+soldoTotal+"€");
        
        float soldoLiquido= soldoTotal-(irpf*soldoTotal+rss);
        
        System.out.println("O soldo líquido é de : "+soldoLiquido+"€");
        
    }
    
}
